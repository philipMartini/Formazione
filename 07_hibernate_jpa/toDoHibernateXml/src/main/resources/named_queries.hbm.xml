<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"https://hibernate.org/dtd/hibernate-mapping-3.0.dtd">
	
<hibernate-mapping>

	<query name="BYNAMEANDPASS">
		<![CDATA[from User where userName = :name and password = :pass]]>
	</query>

	<query name="BYUSERID">
		<![CDATA[from ToDo where user_id = :id]]>
	</query>

</hibernate-mapping>